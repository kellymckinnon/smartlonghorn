<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/answer_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5" />

    <Button
        android:id="@+id/bad_answers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:text="I didn't find an answer to my question" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="There was an error with your request. Please check your network connection, or try one of the below alternatives."
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorry, no answer found! New information is constantly being processed, so check back soon."
        android:visibility="gone" />

    <Button
        android:id="@+id/failure_rephrase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Rephrase question"
        android:visibility="gone" />

    <Button
        android:id="@+id/failure_view_popular_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="View popular questions"
        android:visibility="gone" />

    <Button
        android:id="@+id/failure_search_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Search on utexas.edu"
        android:visibility="gone" />

</LinearLayout>
